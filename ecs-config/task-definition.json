json
{
  "family": "testing-app-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "testing-app-container",
      "image": "337909741523.dkr.ecr.us-east-1.amazonaws.com/testing-app:environment=dev",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/testing-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}