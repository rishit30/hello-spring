bash
#!/bin/bash

# Stop running task
RUNNING_TASK_ID=$(aws ecs list-tasks --cluster $ECS_CLUSTER --service-name $ECS_SERVICE --query 'taskArns[0]' --output text)
if [ "$RUNNING_TASK_ID" != "None" ]; then
  aws ecs stop-task --cluster $ECS_CLUSTER --task $RUNNING_TASK_ID
fi

# Update service
aws ecs update-service --cluster $ECS_CLUSTER --service $ECS_SERVICE --force-new-deployment